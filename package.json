{
  "name": "svelte-intercom",
  "type": "module",
  "version": "0.0.9",
  "packageManager": "pnpm@9.9.0",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calvo-jp/svelte-intercom.git"
  },
  "bugs": {
    "url": "https://github.com/calvo-jp/svelte-intercom/issues",
    "email": "calvojp92@gmail.com"
  },
  "description": "Intercom for Svelte",
  "keywords": [
    "Intercom",
    "Svelte Intercom"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "release": "release-it"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "svelte": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0-next.1"
  },
  "dependencies": {
    "@intercom/messenger-js-sdk": "^0.0.13"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.2.7",
    "@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
    "@types/eslint": "^9.6.0",
    "@types/node": "^22.5.4",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.7",
    "release-it": "^17.6.0",
    "svelte": "^5.0.0-next.145",
    "svelte-check": "^3.6.0",
    "tslib": "^2.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.3",
    "vitest": "^2.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm check"
      ],
      "after:bump": [
        "pnpm build"
      ]
    }
  }
}
