{
  "name": "svelte-intercom",
  "type": "module",
  "version": "0.0.4",
  "packageManager": "pnpm@9.9.0",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calvo-jp/svelte-intercom.git"
  },
  "bugs": {
    "url": "https://github.com/calvo-jp/svelte-intercom/issues",
    "email": "calvojp92@gmail.com"
  },
  "description": "Intercom for Svelte",
  "keywords": [
    "Intercom",
    "Svelte Intercom"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "release": "release-it"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0-next.1"
  },
  "dependencies": {
    "@intercom/messenger-js-sdk": "^0.0.13"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.2.4",
    "@sveltejs/kit": "^2.5.25",
    "@sveltejs/package": "^2.3.4",
    "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "publint": "^0.2.10",
    "release-it": "^17.6.0",
    "svelte": "^5.0.0-next.243",
    "svelte-check": "^4.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm check"
      ],
      "after:bump": [
        "pnpm package"
      ]
    }
  }
}
